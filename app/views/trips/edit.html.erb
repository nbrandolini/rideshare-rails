<% @trip.errors.each do |field, message|%>

<li>
  <strong>
    <%= field.capitalize%>:</strong><%= message%>
  </li>
  <%end%>
</ul>

<h2>Edit trip <%= @trip.id %></h2>
<%= form_for @trip do |f| %>

<%= f.label :passenger%>
<%= f.text_field :passenger_id %>


<%= f.label :driver%>
<%= f.text_field :driver_id %>

<%= f.label :rating%>
<!-- <%= f.select :rating, options_for_select(1..5) %> -->
<%= f.text_field :rating %>

<%= f.submit %>
<% end %>
